@model IEnumerable<BackendFinal.Models.File>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<h2>Index</h2>
<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="#">Dashboard</a>
    </li>
    <li class="breadcrumb-item active">Tables</li>
</ol>
<!-- Example DataTables Card-->
<div class="card mb-3">
    <div class="card-header">
        <i class="fa fa-table"></i> Data Table Example
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            Fayl Adı
                        </th>
                        <th>
                            Faylin Növü
                        </th>
                        <th>
                            Faylın Həcmi
                        </th>
                        <th>
                            Faylın Qaynağı
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>
                            Fayl Adı
                        </th>
                        <th>
                            Faylin Növü
                        </th>
                        <th>
                            Faylın Həcmi
                        </th>
                        <th>
                            Faylın Qaynağı
                        </th>
                        <th></th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.file_name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.file_type)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.file_size)
                            </td>
                            <td>
                                <img src="@item.file_path" width="200" alt="Alternate Text" />
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                                @Html.ActionLink("Details", "Details", new { id = item.id }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.id })
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
</div>
